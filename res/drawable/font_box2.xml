<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="2dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="2dp">
        <shape android:shape="rectangle">

            <!-- 테두리 두께 및 색상 설정 -->
            <stroke
                android:width="1dp"
                android:color="#9E9E9E" />

            <solid android:color="#ffffff"/>
        </shape>
    </item>

</layer-list>


